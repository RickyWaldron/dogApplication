div.footer 
	div(class="footerlogo")
		img(src="/images/logo.png")
		p Dog Friend inc. 

		img(class="right" src="/images/facebook.png")
		img(class="right" src="/images/instagram.png")
		img(class="right" src="/images/twitter.png")
		p(class='right') Terms
		
		
		

style(type="text/css").
	.footer{
		width: 100%;
		height: 50px;
		color: #3F5159;
		background-color: #fff;
		border-top: 1px solid #039694;
	}	

		.footerlogo {
			margin-left: 2%;
			z-index: -1;
		}

		.footerlogo img {
			display: inline-block;
			width: auto;
			height: auto;
			vertical-align: middle;
			margin-left: 5%;
		}
		.footerlogo p {
			display: inline-block;
			width: auto;
			height: auto;
			margin-left: 5px;
			vertical-align: middle;
		}

		.right {
			float: right;
			vertical-align: middle;
		}


