html
	head
		title Profile Page
		script(src="https://code.jquery.com/jquery-3.2.1.js"
			integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
			crossorigin="anonymous"
			)
		link(rel='stylesheet', type='text/css', href='css/style.css')
		link(rel='stylesheet', type='text/css', href='css/profile.css')
		link(href="https://fonts.googleapis.com/css?family=Open+Sans|Oswald" rel="stylesheet")

	body
		div(class="site-container1")
			div(class="site-pusher1")
				include nav.pug
				div(class="container")
					div(class="filling")
					div(class="containerMatchGallery")
						if(dogOwner)
							- for (var j=0; j < doginfo[0].rows.length; j++)
								div(class="oneMatch")
									div(class="dogInfo" id="dogname") Meet #{doginfo[0].rows[j].dogname}!
									div(class="dogInfo") 
										img(class="dogProfilePicture", src="uploads/"+doginfo[0].rows[j].picture)
									div(class="dogInfo" id="dogname2") #{doginfo[0].rows[j].dogname}
									div(class="dogInfo" id="aboutdog") #{doginfo[0].rows[j].aboutdog}
									div(class="dogInfo" id="sizedog") Size: #{doginfo[0].rows[j].size}
						else if(dogOwner == false)	
							- for (var i=0; i < userinfo[0].rows.length; i++)
								div(class="oneMatch")
									div(class="profileInfo" id="owner")
									div(class="profileInfo")
										img(class="profilePicture", src="uploads/"+userinfo[0].rows[i].picture)
									div(class="profileInfo" id="firstname") #{userinfo[0].rows[i].firstname}
									div(class="profileInfo" id="aboutme") #{userinfo[0].rows[i].about}
					div(class="containerMap")
						img(class="map", src="/images/map.png")
